package appu26j.cosmetics;

import java.util.ArrayList;

import appu26j.cosmetics.head.ChinaHat;

public class CosmeticsManager
{
    private ArrayList<Cosmetic> cosmetics = new ArrayList<>();
    
    public CosmeticsManager initialize()
    {
        // Head
        this.cosmetics.add(new ChinaHat());
        return this;
    }
    
    public Cosmetic getCosmetic(String name)
    {
        return this.cosmetics.stream().filter(cosmetic -> cosmetic.getName().equals(name)).findFirst().orElse(null);
    }
}
